# This is the top-most .editorconfig file; do not search in parent directories.
root = true

[*]
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[composer.json]
indent_style = space
indent_size = 2

[CHANGES.md]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.twig]
trim_trailing_whitespace = false
insert_final_newline = false
